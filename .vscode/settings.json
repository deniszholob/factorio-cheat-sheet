{
    "files.exclude": {
        "**/.angular": true,
        "**/.github": true,
        "**/.husky": true,
        "**/build": true,
        "**/docs": true,
        "**/node_modules": true,
        "**/public/": true,
        "**/screenshots/": true,
        "**/.editorconfig": true,
        "**/.eslint*": true,
        "**/.gitignore": true,
        "**/.npmrc": true,
        "**/.prettierignore": true,
        "**/.prettierrc": true,
        "**/debug.log": true,
        "**/package-lock.json": true,
        "**/tsconfig*": true,
        "**/tslint.json": true,
        "**/FUNDING.yml": true,
        "**/LICENSE": true,
        "**/.browserslistrc": true,
        "**/.gitkeep": true,
        "**/environments": true,
        "**/src/main.ts": true,
        "**/polyfills.ts": true,
        "**/typings.d.ts": true,
        "**/CNAME": true
    },
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "explorer.sortOrderLexicographicOptions": "lower", // Case sensitive file ordering in tree
    "workbench.iconTheme": "material-icon-theme",
    "cSpell.words": [
        "Zuri's",
        "browserconfig",
        "codelyzer",
        "combinators",
        "deniszholob",
        "devkit",
        "factorio",
        "factoriocheatsheet",
        "mstile",
        "ngsw",
        "readonly",
        "rowspan",
        "stylelint",
        "tslib"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
}
